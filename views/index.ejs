<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <style>
        form {
            display: flex;
            flex-direction: column;
            margin: 20px;
            width: 200px;
        }
    </style>
    <h1>welcome testing </h1>
    <form action="/provider/allocate" method="post">
        <h1>provider</h1>
        <label for="">Metamask id</label>
        <input type="text" name="providerId">
        <label for="">allocatedSpace</label>
        <input type="text" name="allocatedSpace">
        <button type="submit">submit</button>
    </form>

    <h1>provider</h1>
    <% if(data && data.length> 0) { %>
        <table style="width: 100%; border: 1px solid #000; border-collapse: collapse;">
            <thead>
                <tr>
                    <th style="border: 1px solid #000; padding: 8px;">Provider ID</th>
                    <th style="border: 1px solid #000; padding: 8px;">Allocated Space</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(item) { %>
                    <tr>
                        <td style="border: 1px solid #000; padding: 8px;">
                            <%= item.providerId %>
                        </td>
                        <td style="border: 1px solid #000; padding: 8px;">
                            <%= item.allocatedSpace %>GB
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else { %>
            <p>No data available.</p>
            <% } %>


                <form id="buyer" action="/rent/buyer" method="post">
                    <h1>buyer </h1>
                    <label for="">Metamask id</label>
                    <input type="text" name="buyerId">
                    <label for="">providerId</label>
                    <input type="text" name="providerId">
                    <label for="">how much space want </label>

                    <input type="text" name="rentedSpace">
                    <button type="submit">submit</button>

                </form>

                <h1>BUYER</h1>
                <% if(buyerdata && buyerdata.length> 0) { %>
                    <table style="width: 100%; margin-bottom: 20px; border: 1px solid #000; border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid #000; padding: 8px;">Byuer ID</th>
                                <th style="border: 1px solid #000; padding: 8px;">Provider ID</th>
                                <th style="border: 1px solid #000; padding: 8px;"> Buyer space</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% buyerdata.forEach(function(item) { %>
                                <tr>
                                    <td style="border: 1px solid #000; padding: 8px;">
                                        <%= item.buyerId %>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 8px;">
                                        <%= item.providerId %>
                                    </td>
                                    <td style="border: 1px solid #000; padding: 8px;">
                                        <%= item.rentedSpace %>GB
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <p>No data available.</p>
                        <% } %>
                            <form action="/upload" method="post" enctype="multipart/form-data">
                                <label for="upload files"> files upload </label>

                                <div class="mb-4">
                                    <label for="img" class="block text-sm font-medium text-gray-700 mb-1">Upload
                                        Image</label>
                                    <input type="file" id="img" name="img_file" accept="image/*"
                                        class="block w-full text-sm text-gray-500 border border-gray-300 rounded-md cursor-pointer focus:outline-none focus:ring-2 focus:ring-pink-500 focus:ring-opacity-50" />
                                </div>
                                <button type="submit">upload</button>
                            </form>

</body>

</html>